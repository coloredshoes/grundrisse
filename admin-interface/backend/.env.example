# =============================================================================
# GRUNDRISSE ADMIN API CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_TITLE=Grundrisse Admin API
APP_VERSION=1.0.0
APP_DESCRIPTION=Admin interface for managing content sources

# =============================================================================
# DATABASE CONFIGURATION (EdgeDB)
# =============================================================================
EDGEDB_HOST=localhost
EDGEDB_PORT=5656
EDGEDB_DATABASE=grundrisse
# Optional: Only needed if EdgeDB requires authentication
# EDGEDB_USER=your_username
# EDGEDB_PASSWORD=your_password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# REQUIRED: Generate a strong secret key for JWT tokens
# You can generate one with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# OPTIONAL: LOGGING & MONITORING
# =============================================================================
# LOG_LEVEL=INFO
# SENTRY_DSN=your_sentry_dsn_here
